<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

    <import resource="classpath:edu/sl/grabalyze/config/spring-database.xml"/>

    <bean id="dateEditor"
          class="org.springframework.beans.propertyeditors.CustomDateEditor">

        <constructor-arg>
            <bean class="java.text.SimpleDateFormat">
                <constructor-arg value="yyyy-MM-dd" />
            </bean>
        </constructor-arg>
        <constructor-arg value="true" />

    </bean>

    <bean class="org.springframework.beans.factory.config.CustomEditorConfigurer">
        <property name="customEditors">
            <map>
                <entry key="java.util.Date">
                    <ref local="dateEditor" />
                </entry>
            </map>
        </property>
    </bean>
    
    <bean id="articleDAO" class="edu.sl.grabalyze.dao.impl.ArticleDAOImpl">
        <property name="dataSource" ref="dataSource" />
    </bean>

    <bean id="tokenDAO" class="edu.sl.grabalyze.dao.impl.TokenDAOImpl">
        <property name="dataSource" ref="dataSource" />
    </bean>

    <!-- ********** GRAB *********** -->

    <bean id="loadController" class="edu.sl.grabalyze.execution.LoadController" factory-method="get">
        <property name="delay" value="200" />
    </bean>

    <bean id="gazetaUaListFactory" class="edu.sl.grabalyze.grabber.factory.GazetaUaListFactory">
        <constructor-arg value="2013-04-06" />
        <constructor-arg value="2013-04-07" />
        <property name="articleDAO" ref="articleDAO" />
    </bean>

    <bean id="gazetaUaArticleFactory" class="edu.sl.grabalyze.grabber.factory.GazetaUaArticleFactory">
        <constructor-arg value="1000" />
        <constructor-arg value="0" />
        <property name="articleDAO" ref="articleDAO" />
    </bean>

    <bean id="grabberFactory" class="edu.sl.grabalyze.grabber.factory.GrabberFactory">
        <property name="strategyFactory" ref="gazetaUaArticleFactory" />
    </bean>

    <!-- ********** PROCESSING *********** -->

    <bean id="russianProcessor" class="edu.sl.grabalyze.processing.TextProcessor">
        <constructor-arg>
            <bean class="edu.sl.grabalyze.processing.language.LanguageFactory" factory-method="createLanguage">
                <constructor-arg value="ru" />
            </bean>
        </constructor-arg>
    </bean>
    <bean id="ukrainianProcessor" class="edu.sl.grabalyze.processing.TextProcessor">
        <constructor-arg>
            <bean class="edu.sl.grabalyze.processing.language.LanguageFactory" factory-method="createLanguage">
                <constructor-arg value="uk" />
            </bean>
        </constructor-arg>
    </bean>

    <bean id="processingFactory" class="edu.sl.grabalyze.processing.factory.ProcessingFactory">
        <property name="articleDAO" ref="articleDAO" />
        <property name="tokenDAO" ref="tokenDAO" />
        <property name="textProcessor" ref="ukrainianProcessor" />
        <property name="countPerWorker" value="1" />
        <property name="offset" value="0" />
    </bean>

    <bean id="program" class="edu.sl.grabalyze.execution.ProgramExecutor">
        <property name="factory" ref="processingFactory" />
        <property name="threadCount" value="1" />
    </bean>


</beans>